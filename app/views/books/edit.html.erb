<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div class="error_box">
    <h2 class="error_title"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  </ul>
<% end %>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  
    <div class="field">
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Update Book' %>
    </div>
  
  <%= link_to 'Show', book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
<% end %>