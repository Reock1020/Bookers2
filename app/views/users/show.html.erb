<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <!-- ユーザーの詳細 -->
      <div class="col-md-3">
        <%= render 'user_info', user: @user %>
        <%= render 'books/new', book: @book %>
      </div>
        <!-- ユーザーの投稿一覧 -->
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= link_to image_tag(book.user.get_profile_image(100,100)),user_path(book.user.id) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <div id="favorite_btn_<%= book.id %>">
                <%=render 'favorites/favorite',book: book %>
              </div>
              <td><p><%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %></p></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
