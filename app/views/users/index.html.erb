<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <!-- ユーザーの詳細 -->
      <div class="col-md-3">
        <%= render 'user_info', user: @user %>
        <%= render 'books/new', book: @book %>
      </div>
        <!-- ユーザーの投稿一覧 -->
      <div calss="col-lg-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to 'show', user_path(user.id) %> </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

